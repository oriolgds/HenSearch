---
import SearchForm from "./SearchForm.astro";
---

<header class="p-4">
  <nav class="flex justify-end space-x-4">
    <a
      href="https://gmail.com"
      class="text-sm text-gray-700 hover:underline my-auto">Gmail</a
    >
    <a
      href="https://drive.google.com"
      class="text-sm text-gray-700 hover:underline my-auto">Drive</a
    >
    <button class="p-2 text-sm text-gray-700 hover:bg-gray-100 rounded-full">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <span class="sr-only">Menu</span>
    </button>
    <button
      class="text-white px-4 py-2 rounded-md text-sm font-medium"
      style="background-color: var(--primary);">Iniciar sesi√≥n</button
    >
  </nav>
</header>

<main class="flex-grow flex flex-col items-center justify-center px-4">
  <h1
    class="text-8xl font-bold mb-8 text-secondary"
    style="word-spacing: -20px;"
  >
    Fed The Hens
  </h1>
  <div class="w-full max-w-2xl">
    <SearchForm formClasses="relative">
      <input
        type="text"
        id="search-field"
        class="w-full py-3 px-4 pr-12 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-900 focus:border-transparent"
        placeholder="Buscar en la web"
      />
      <button type="submit" style="height: 50px;" class="absolute right-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 text-gray-400"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span class="sr-only">Search</span>
      </button>
      <div class="mt-8 space-x-4 text-center">
        <button
          id="search-secondary-button"
          class="bg-gray-100 text-gray-800 px-4 py-2 rounded-md text-sm hover:shadow-md"
          >Buscar</button
        >
        <button
          class="bg-gray-100 text-gray-800 px-4 py-2 rounded-md text-sm hover:shadow-md"
          >Dar de comer</button
        >
      </div>
    </SearchForm>
  </div>
</main>
